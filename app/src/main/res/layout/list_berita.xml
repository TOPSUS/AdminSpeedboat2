<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_24">
    <RelativeLayout
        android:id="@+id/itemLay"
        android:focusableInTouchMode="false"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/bg_item_kapal"
        android:layout_toStartOf="@id/lihatberita"
        android:padding="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_toEndOf="@id/thumbnail"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Judul Berita"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="created at"
                    android:textColor="@color/primary_grey"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lihatberita"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/itemLay"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/itemLay"
        android:background="@drawable/bg_item_berita_goto">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_eye_24"
            android:backgroundTint="@color/primary_white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>