<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tertiary_blue"
    tools:context=".fragment.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_24"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_4">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="@dimen/profile_size_64"
                    android:layout_height="@dimen/profile_size_64"
                    app:civ_border_color="@color/white"
                    android:src="@drawable/no_profile"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/profile"
                    android:paddingHorizontal="@dimen/margin_16"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/profile_default_username"
                        android:textSize="18sp"
                        android:textColor="@color/primary_black"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/profile_default_role"
                        android:textSize="16sp"
                        android:textColor="@color/primary_grey"
                        android:textAlignment="center"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_16"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/profile_section_profile"
                android:textSize="14sp"
                android:textColor="@color/secondary_black"/>
            <RelativeLayout
                android:id="@+id/menu_editprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_edit_24"/>
                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_edit"
                    android:layout_toStartOf="@+id/right_edit"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_edit"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_edit"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_changepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img_change"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_lock_24"/>
                <TextView
                    android:id="@+id/txt_change"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_change"
                    android:layout_toStartOf="@+id/right_change"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_change_password"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_change"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="@dimen/margin_8"
                android:background="@color/secondary_grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_16"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/profile_section_menu"
                android:textSize="14sp"
                android:textColor="@color/secondary_black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/img_article"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_article_24"/>
                <TextView
                    android:id="@+id/txt_article"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_article"
                    android:layout_toStartOf="@+id/right_article"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_menu_article"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_article"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img_reward"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_reward_24"/>
                <TextView
                    android:id="@+id/txt_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_reward"
                    android:layout_toStartOf="@+id/right_reward"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_menu_point"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_reward"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img_review"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_star_24"/>
                <TextView
                    android:id="@+id/txt_review"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_review"
                    android:layout_toStartOf="@+id/right_review"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_menu_review"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_review"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_jadwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img_jadwal"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_date_range_24"/>
                <TextView
                    android:id="@+id/txt_jadwal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_jadwal"
                    android:layout_toStartOf="@+id/right_jadwal"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_menu_jadwal"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_jadwal"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img_transaksi"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_baseline_fact_check_24"/>
                <TextView
                    android:id="@+id/txt_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_transaksi"
                    android:layout_toStartOf="@+id/right_transaksi"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_menu_transaksi"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_transaksi"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_kapal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img_kapal"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_boat_24"/>
                <TextView
                    android:id="@+id/txt_kapal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_kapal"
                    android:layout_toStartOf="@+id/right_kapal"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_menu_kapal"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_kapal"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:background="@drawable/bg_btn_profile"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img_logout"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_24"
                    android:layout_height="@dimen/margin_24"
                    android:src="@drawable/ic_exit_24"/>
                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/img_logout"
                    android:layout_toStartOf="@+id/right_logout"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_logout"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_black"
                    android:layout_marginHorizontal="@dimen/margin_16"/>
                <ImageView
                    android:id="@+id/right_logout"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin_32"
                    android:layout_height="@dimen/margin_32"
                    android:src="@drawable/ic_chevron_right_24"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="@dimen/margin_8"
                android:background="@color/secondary_grey"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>